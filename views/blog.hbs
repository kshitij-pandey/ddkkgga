<section class="blog-title" style="margin-top:8%">
    <h1 style="text-transform: uppercase;">{{blog.title}}</h1>
</section>

<section class="blog-body">
    <div class="blog-details">
        <p>BY DEEPAK K GUJRATI </p>
        <p>19 June 2021</p>
    </div>
    <div class="blog-description">
        <p>
            {{blog.description}}
        </p>
    </div>
</section>

<section>
    <div class="header">
        <h1><span>BLOG</span></h1>
    </div>

    <!-- Blog containers start -->
    <section class="section" style="padding: 0">
        <div class="insight-card-deck">
            {{# blogs}}
            <div class="insight-card">
                {{# if imgUrl}}
                <img src="{{imgUrl}}" alt="">
                {{else}}
                <img src="./img/gst_thumb.png" alt="">
                {{/ if}}
                <h1 style="text-transform: uppercase;" class="title">{{title}}</h1>
                <p>{{date}}</p>
                <div class="blog-action" style="margin-left:1%">
                    <a href="{{blog.link}}">Read the blog</a>
                </div>
            </div>
            {{/ blogs}}
        </div>
    </section>
    <!-- Blog containers end -->
</section>
